<view class="advice-page">
  <view class="title">意见反馈</view>
  <view class="item">
    <text class="label">联系方式：</text>
    <input type="text" placeholder="请输入您的联系方式" value="{{ phone }}" bindinput="getPhone" />
  </view>
  <view class="item">
    <text class="label">反馈内容：</text>
    <textarea value="" placeholder="请输入您的反馈内容" value="{{ advice_content }}" bindinput="getAdviceContent" />
  </view>
  <button type="primary" bindtap="submit" style="height: 80rpx; width: 20%; color:white; font-size: 30rpx ;background-color: #8b0000 ;" >提交</button>
</view>