.advice-page {
  background-color: #fff;
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  margin-top: 80rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx 0;
  padding-bottom: 40rpx;
}

.item {
  display: flex;
  flex-direction: column;
  gap: 20rpx 0;
  margin-left: 20rpx;
}

.item input, textarea {
  border: 1rpx solid #8B0000;
  padding: 20rpx;
  width: 90%;
  border-radius: 20rpx;
}

.title {
  margin-top: 40rpx;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}