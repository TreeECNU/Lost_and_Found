.body {
  width: 100vw;
  min-height: 100vh;
  background-color: #FFF;
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 5rpx solid #8b0000;
}

.top .close-icon {
  width: 40rpx;
  height: 40rpx;
}

.top .publish-btn {
  margin: 0 !important;
  background-color: #8B0000;
  color: #fff;
  border-radius: 40rpx;
  width: 150rpx;
  font-size: 30rpx;
}

.container {
  /* 上右下左 */
  padding: 35rpx 35rpx 35rpx 35rpx;
}

.type {
  display: flex;
  align-items: center;
}

.type .label {
  margin-right: 5rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  font-family: SimSun;
}

.type .type-item {
  background-color: rgb(201, 198, 198);
  padding: 18rpx 55rpx;
  border: 3rpx solid #8B0000;
  margin-right: 20rpx;
  border-radius: 10rpx;
  white-space: nowrap;
  font-family: SimSun;
  border-width: 5rpx;
  font-weight: bold;
}

.type .type-select-1 {
  background-color: #8B0000;
  COLOR: #fff;
  box-shadow: -5px 5px 5px 5px #778899;
  font-weight: bold;
}

.type .type-select-2 {
  background-color: #8B0000;
  COLOR: #fff;
  box-shadow: 5px 5px 5px 5px #778899;
  font-weight: bold;
}


.classify {
  margin-top: 50rpx;
  display: flex;
  width: 100%;
  align-items: center;
}

.classify .label {
  margin-right: 5rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  font-family: SimSun;
}

.classify .picker {
  width: 100%;
}

.picker .empty, .select{
  border: 2rpx solid #8B0000;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker .empty .select-icon {
  width: 50rpx;
  height: 50rpx;
}

.picker .empty .label {
  margin-left: 1rpx;
  white-space: nowrap;
  font-family: SimSun;
}

.picker .select .delete-icon {
  width: 50rpx;
  height: 50rpx;
}

.input-list .input-item {
  margin-top: 30rpx;
  display: flex;
  width: 100%;
  align-items: center;
}

.input-list .label {
  margin-right: 5rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  font-family: SimSun;
}

.input-list .input-content {
  width: 100%;
  border: 2rpx solid #8B0000;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
}

.desc {
  padding: 15rpx 0rpx;
  /* border-bottom: 5rpx solid #f3f3f3; */
  position: relative;
  margin-top: 20rpx;
}

.desc .desc-content {
  margin-top: 20rpx;
  border-style: solid;
  border-width: 2rpx;
  border-color: #8b0000;
  border-radius: 15rpx;
}

.desc .close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 10rpx;
}

.upload {
  padding-top: 20rpx;
  border-style: solid;
  border-width: 2rpx;
  border-color: #8b0000;
  margin-top: 20rpx;
  border-radius: 15rpx;
}

.upload .upload-top {
  display: flex;
  justify-content: space-between;
}

.upload .upload-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.upload .upload-list .default{
  width: 33%;
  height: 200rpx;

}

.img-list {
  width: 33%;
  height: 200rpx;
  position: relative;
}

.img-list .common {
  width: 100%;
  height: 100%;
}

.img-list .delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.error-tips {
  color: #f00;
  font-size: 26rpx;
}

.upload-top .text1 {
  padding-left: 20rpx;
  font-family: SimSun;
}

.upload-top .text2 {
  padding-right: 20rpx;
  font-family: SimSun;
}


.placeholderStyle {
  font-family: SimSun;
}

.desc-content .font {
  font-family: SimSun;
  margin-left: 20rpx;
  padding-top: 5rpx;
}

.desc .label {
  margin-right: 20rpx;
  white-space: nowrap;
  font-family: SimSun;
}

.input-content .font{
  font-family: SimSun;
}

.bottom .label {
  white-space: nowrap;
  font-family: SimSun;
}
