.lose-body {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* display: flex; */
  align-items: center;
  justify-content: center;
}

.lose-item {
  width: 100%;
  display: flex;
  padding: 20rpx;
  background-color: #FFF;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #778899;
}

.lose-item .lose-item-image {
  width: 250rpx;
  height:  250rpx;
  min-width: 250rpx;
  border-radius: 20rpx;
}

.lose-content {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  width: 100%;
  font-family: SimSun;
}

.lose-content .name {
  font-weight: bold;
  font-size: 32rpx;
}

.lose-content .region {
  margin-top: 35rpx;
  font-size: 30rpx;
  margin-bottom: 5rpx;
}

.lose-content .date, .describe {
  font-size: 30rpx;
  margin-bottom: 5rpx;
  margin-top: 10rpx;
}

.lose-content .describe {
  max-width: 400rpx;
  color: #000;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.lose-content .publish-time {
  margin-top: 30rpx;
  margin-left: auto;
  color: #000;
  font-size: 24rpx;
}

.lose-body {
  background-color: #fff;
  position: relative;
}

.handle-btn {
  /* display: flex; */
  justify-content: flex;
  padding-top: 10rpx;
  padding-bottom: 90rpx;
}

.update-btn, .delete-btn {
  margin-right: 20rpx;
  margin-top: 10rpx;
  margin-left: 2rpx;
  float: right;
}

.update-btn, .update-btn {
  margin-right: 20rpx;
  margin-top: 10rpx;
  margin-left: 2rpx;
  float: right;
}


.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}